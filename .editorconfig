# http://editorconfig.org
#是否是顶级配置文件，设置为true的时候才会停止搜索.editorconfig文件
root = true

[*]
# 编码格式
charset = utf-8
# 缩进大小
indent_size = 2
# 缩进方式
indent_style = space
# 换行符类型
end_of_line = crlf
# 是否删除行尾空格
trim_trailing_whitespace = false
# 是否让文件以空行结束
insert_final_newline = true
# 最大行宽
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
